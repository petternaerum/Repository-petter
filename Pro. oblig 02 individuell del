kWh-wealthy-consumer-data
fun energi-to-number(s :: String) -> Number:
  doc: "If s is not a numeric string, default to 0."
  cases(Option) string-to-number(s):
    | some(a) => a
    | none => 0
  end
where:
  energi-to-number("30") is 30
  energi-to-number("") is 0
energi-to-number("48") is 48
end

#C
tabell-tall = transform-column(kWh-wealthy-consumer-data, "energi",energi-to-number)

print(tabell-tall)

#d
Energiforbruk = sum(tabell-tall, "energi")

print(Energiforbruk)

fun bil(): 
  energy-per-day = ((50/10) * (10))
  energy-per-day
end

bil()

fun add-bil(value :: Number) -> Number:
  if value == 0:
    bil()
  else:
    value
  end
end

#Sliter med å plassere bil inn i tabellen

fun sum-energi():
  t = transform-column(kWh-wealthy-consumer-data, "energi", energi-to-number)
  sum(t, "energi")
end
sum-energi() + bil()


